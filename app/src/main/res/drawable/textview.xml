<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle"/>
    </item>
    <item
        android:bottom="0dp"
        android:left="-100dp"
        android:right="-100dp"
        android:top="-80dp">
        <shape android:shape="oval">
            <gradient
                android:angle="90"
                android:endColor="#4BCDB5"
                android:startColor="#0275A9"
                android:type="linear" />
            <corners
                android:radius="0dp"/>
        </shape>
    </item>

</layer-list>